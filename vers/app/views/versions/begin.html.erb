<%= form_tag versions_begin_path, :method => :get do %>
                <%= text_field_tag :search, params[:search] %>
                <%= submit_tag "Search", :name => nil, :class => "button postfix" %>
<% end %>

<% if @products.empty? %> 
    <p>No products added to database</p>
<% else %>
    <ul>
      <% @products.each do |product| %>
          <li>
         Event:   <%= product.eve %><br>
         Modifications:   <%= product.modi %>
          </li>
          <hr>
      <% end %>
    </ul>
<% end %>

<br>

<%= link_to 'New Product', versions_start_path, :class => 'button' %>
